    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:id="@+id/abc"
            android:src="@drawable/animalesicono"
            android:background="@color/white"
            android:onClick="abece"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:id="@+id/pal"
            android:background="@color/white"
            android:src="@drawable/animalesicono"
            android:onClick="animal"
            android:layout_above="@+id/dias"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:id="@+id/casa"
            android:background="@color/white"
            android:src="@drawable/casaicono"
            android:layout_below="@+id/abc"
            android:onClick="casa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:background="@color/white"
            android:id="@+id/dias"
            android:src="@drawable/diasicono"
            android:onClick="dias"
            android:layout_below="@+id/abc"
            android:layout_alignLeft="@+id/pal"
            android:layout_alignStart="@+id/pal" />
    </RelativeLayout>

